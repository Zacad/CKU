{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body id="body" class="{{body_class}}" data-template="base.twig">


		<div id="top" data-sticky-container>

			<div class='top-bar sticky' data-sticky data-options="marginTop:0; stickyOn:small" style="width:100%" >

				<div class="top-bar-left">
					<h1 class="hdr-logo" role="banner">
						<a class="hdr-logo-link" href="{{site.url}}" rel="home"><img src="{{site.url}}/wp-content/themes/cku/inc/img/logo1.png"></a>
					</h1>
				</div>

				<div class="top-bar-right">
					<div data-responsive-toggle="nav-main" data-hide-for="medium">
						<button class="menu-icon" type="button" data-toggle="nav-main"></button>
						<div class="title-bar-title">Menu</div>
					</div>
					<nav id="nav-main" class="nav-main" role="navigation">
						{% include "menu.twig" with {'menu': menu.get_items} %}
					</nav><!-- #nav -->
				</div>
			</div>
		</div>

		<header class="header" >
			{% block header %}
				<div class="wrapper">

			      <div class="grid-container">
					{% if home == true %}			        
					{% filter shortcodes %}
			          [layerslider id="1"]
			        {% endfilter %}
					{% endif %}
			      </div>

			  </div>
			{% endblock %}
		</header>

		<section id="content" role="main" class="content-wrapper">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
			<footer id="footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
